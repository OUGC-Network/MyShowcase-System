<div class="post post--message deleted_entry_collapsed" id="deleted_entry_{{ entrySlug }}">
    <div class="post__meta">
        <h3 class="post__author">{{ userProfileLink|raw }}</h3>
    </div>
    <div class="post__body post__body--message post_body" id="deleted_post{{ entrySlug }}">
        {{ deletedMessage }}
        <div class="post--message__button" id="show_deleted_link_{{ entrySlug }}">
            <a href="javascript:void(0)" onclick="Showcase.showDeletedEntry('{{ entrySlug }}'); return false;"
               class="button">
                {{ include('partials/icon.twig', {icon: 'eye', class: 'button__icon'}, with_context = false) }}
                <span class="button__text">{{ lang.myShowcaseEntryDeletedSButtonShow }}</span>
            </a>
        </div>
        <script type="text/javascript">
            <!--
                $('#show_deleted_link_{{ entrySlug }}').show();
            // -->
        </script>
    </div>
</div>